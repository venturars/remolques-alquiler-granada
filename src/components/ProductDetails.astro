<div class="w-full h-full">
  <section
    class="max-w-screen-xl mx-auto py-14 2xl:px-0 px-16 max-md:px-4 max-xs:px-0"
    id="detalles"
  >
    <div role="tablist" class="tabs tabs-lifted md:tabs-lg">
      <input
        type="radio"
        name="my_tabs_2"
        role="tab"
        class="tab [--tab-bg:#F1F5F9] [--tab-border-color:#a1c2f7] min-w-max"
        aria-label="Datos técnicos"
        checked
      />
