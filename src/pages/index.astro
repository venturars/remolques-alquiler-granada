---
import { GoogleFontsOptimizer } from "astro-google-fonts-optimizer";
import FirstView from "../components/FirstView.astro";
import MainLayout from "../layouts/Main.astro";
import Intro from "../components/Intro.astro";
import Trailers from "../components/Trailers.astro";
import Location from "../components/Location.astro";
import Faqs from "../components/Faqs.astro";
---

<html
  lang="en"
  dir="ltr"
  data-theme="remolquesenalquilergranada"
  class="scroll-smooth scroll-pt-[60px]"
>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.jpg" />
    <meta name="viewport" content="width=device-width" />
    <title>Remolques en Alquier Granada</title>
    <meta
      name="description"
      content="Descubre la solución perfecta para transportar tus vehículos de pequeño tamaño. En Remolques en alquier Granada, ubicado en Calle Ebro 43, Granada, ofrecemos alquiler de remolques de hasta 750kg para motos, bicicletas, quads, karts y más. Facilitamos tus aventuras sobre ruedas con opciones flexibles de alquiler. ¡Reserva ahora y lleva tus experiencias a cualquier destino con comodidad y seguridad!"
    />
    <GoogleFontsOptimizer
      url="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Space+Grotesk:wght@300;400;500;600;700&display=swap"
    />
    <meta name="color-scheme" content="light dark" />
    <script src="/scripts/swiped-events.js" defer></script>
  </head>

  <body>
    <MainLayout>
      <FirstView />
      <Intro />
      <Trailers />
      <Location />
      <Faqs />
    </MainLayout>
  </body>
</html>
